Updated: {{ time }}
<table class="laps">
    <tr>
        <th>Driver</th>
        <th>Transponder</th>
        <th>Last lap</th>
        <!--<th>Session best</th>-->
        <th>Days best</th>
        <th>Start time</th>
    </tr>
    {% for lap in laps %}
    <tr class="{{ lap.class }}">
        <td class="avatarnick"><img src="{{ lap.transponder|avatar }}" alt="avatar" class="avatar" />
            {{ lap.transponder|nickname }} </td>
        {% if lap.transponder_name is defined %}
        <td class="transponder">{{ lap.transponder_name }}</td>
        {% else %}
        <td class="transponder">{{ lap.transponder }}</td>
        {% endif %}
        <td>{{ lap.lap_time }}</td>
        <!--<td></td>-->
        <td>{{ lap['best-time'] }}</td>
        <td>{{ lap.start_time }}</td>
    </tr>
    {% endfor %}
</table>